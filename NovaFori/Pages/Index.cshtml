@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .row {
        margin-bottom:30px;
    }
</style>

<div class="row" >
    <div class="col-md-12 text-center">
        <h1>My To Do List</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="form-group">
            <label>New item</label>
            <textarea class="form-control" id="newItem" type="text" onkeyup="toggleButton($(this).val())" rows="3"></textarea>
        </div>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-7"></div>
    <div class="col-md-2 text-right">
        <button class="btn btn-primary" id="addButton" onclick="addItem()" disabled>Add</button>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3>Pending</h3>
        <hr />
        <div id="pending"></div>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3>Complete</h3>
        <hr />
        <div id="complete"></div>
    </div>
</div>

<script>
    var list_of_items = @Json.Serialize(Model.li_t_to_do_item);
</script>